<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp">


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="222dp"
        app:srcCompat="@drawable/direcionasus2" />

    <EditText
    android:id="@+id/edt_Email_Login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Email"
    android:textColorLink="#9BD1DF"
    android:textCursorDrawable="@color/colorPrimary"
    android:textStyle="bold"
    app:fontFamily="casual" />

<EditText
    android:id="@+id/edt_Senha_Login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:buttonTint="@color/colorPrimary"
    android:hint="Password"
    android:inputType="textPassword"
    android:textColorLink="#9BD1DF"
    android:textCursorDrawable="@color/colorPrimary"
    android:textStyle="bold"
    app:fontFamily="casual" />

<Button
    android:id="@+id/btn_Login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:textStyle="bold"
    app:fontFamily="casual"
    android:text="Login"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:textColor="#FFFFFF" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_Cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:fontFamily="casual"
        android:onClick="chamarCadastro"
        android:text="Cadastre-se" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_RedefinirSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:fontFamily="casual"
        android:onClick="chamarReset"
        android:text="Esqueci a senha" />
</LinearLayout>

<ProgressBar
    android:id="@+id/login_progress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:indeterminateTint="#3F51B5"
    android:visibility="gone"/>

</LinearLayout>