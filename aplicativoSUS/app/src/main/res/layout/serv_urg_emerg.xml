<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A5ACD"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Serviços de urgência e emergência"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="26dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textView101"
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="Todos os serviços de urgência/emergência funcionam 24h por dia!"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

        <Button
            android:id="@+id/btn_upa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="UPA"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_hospital"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hospital"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_hosp_infantil"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hospital Infantil"
            android:textAlignment="center"
            android:textColor="@android:color/black" />
</LinearLayout>